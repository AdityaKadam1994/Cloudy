<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.moneyfrog.myapplication.Weather"
    android:background="@color/AliceBlue"
    >

    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/weathericon"
        android:src="@drawable/na"


        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Temperature"
        android:id="@+id/temptv"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/weathericon"
        android:layout_toEndOf="@+id/weathericon"
        android:layout_marginTop="35dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mumbai"
        android:id="@+id/loctv"
        android:textStyle="bold"
        android:layout_below="@+id/temptv"
        android:layout_toRightOf="@+id/weathericon"
        android:layout_toEndOf="@+id/weathericon"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rainy"
        android:id="@+id/weathertv"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/loctv"
        android:layout_toRightOf="@+id/weathericon"
        android:layout_toEndOf="@+id/weathericon" />
</RelativeLayout>
