<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/bg2"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.moneyfrog.myapplication.Weather"

        >


        <ImageView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/weathericon"
            android:src="@drawable/na"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Temperature"
            android:id="@+id/temptv"
            android:textStyle="bold"
            android:layout_below="@+id/loctv"
            android:layout_toRightOf="@+id/weathericon"
            android:layout_toEndOf="@+id/weathericon"
            android:layout_marginTop="5dp"
            android:textSize="20sp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Location"
            android:id="@+id/loctv"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/weathericon"
            android:layout_toEndOf="@+id/weathericon"
            android:singleLine="true"
            android:textSize="20sp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Weather"
            android:id="@+id/weathertv"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_below="@+id/temptv"
            android:layout_toRightOf="@+id/weathericon"
            android:layout_toEndOf="@+id/weathericon"
            android:singleLine="true"
            android:layout_marginTop="5dp"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Country"
            android:id="@+id/cont"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"
            android:layout_alignTop="@+id/loctv"
            android:layout_toRightOf="@+id/loctv"
            android:layout_toEndOf="@+id/loctv"
            android:singleLine="true"
            android:textSize="20sp"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="Change City"
            android:id="@+id/change_city"
            android:background="@drawable/button"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/weathericon"
            android:layout_centerHorizontal="true"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_below="@+id/change_city"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="9dp"
            />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details"
            android:layout_below="@+id/weath_forecast"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Forecast"
            android:textStyle="bold"
            android:id="@+id/weath_forecast"
            android:layout_below="@+id/change_city"
            android:layout_marginTop="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/details"
            android:layout_alignEnd="@+id/details" />

    </RelativeLayout>
    </LinearLayout>
</ScrollView>
