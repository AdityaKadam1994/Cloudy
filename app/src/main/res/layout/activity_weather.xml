<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.moneyfrog.myapplication.Weather"
    android:background="@drawable/bg2"
    >

    <ImageView
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:id="@+id/weathericon"
        android:src="@drawable/na"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Temperature"
        android:id="@+id/temptv"
        android:textStyle="bold"
        android:layout_below="@+id/loctv"
        android:layout_toRightOf="@+id/weathericon"
        android:layout_toEndOf="@+id/weathericon"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location"
        android:id="@+id/loctv"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/weathericon"
        android:layout_toEndOf="@+id/weathericon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Weather"
        android:id="@+id/weathertv"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_below="@+id/temptv"
        android:layout_toRightOf="@+id/weathericon"
        android:layout_toEndOf="@+id/weathericon"
        android:singleLine="true"
        android:layout_marginTop="5dp"


        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Details"
        android:id="@+id/getinfo"
        android:layout_marginLeft="25dp"

        android:layout_marginTop="42dp"
        android:layout_below="@+id/weathericon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Country"
        android:id="@+id/cont"
        android:textStyle="bold"
        android:layout_marginLeft="3dp"
        android:layout_alignTop="@+id/loctv"
        android:layout_toRightOf="@+id/loctv"
        android:layout_toEndOf="@+id/loctv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/getinfo"
        android:layout_toRightOf="@+id/weathericon"
        android:layout_toEndOf="@+id/weathericon" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change City"
        android:id="@+id/change_city"
        android:layout_alignTop="@+id/getinfo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"

        />

</RelativeLayout>
