<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data/>


<RelativeLayout
android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:id="@+id/na"
        android:background="@drawable/na"


        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/listdate"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_alignTop="@+id/na"
        android:layout_toRightOf="@+id/na"
        android:layout_toEndOf="@+id/na"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lowtemp"
        android:id="@+id/ltemp"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"

        android:layout_gravity="center_horizontal"

        android:layout_below="@+id/htemp"
        android:layout_toRightOf="@+id/na"
        android:layout_toEndOf="@+id/na" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hightemp"
        android:id="@+id/htemp"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/listdate"
        android:layout_toRightOf="@+id/na"
        android:layout_toEndOf="@+id/na"
        android:layout_marginTop="0dp"
        android:textStyle="bold"

            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/lcond"
        android:textColor="#000000"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/na"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Condition"
        android:id="@+id/lcondition"
        android:textStyle="bold"

        android:layout_below="@+id/ltemp"
        android:layout_toRightOf="@+id/na"
        android:layout_toEndOf="@+id/na" />


</RelativeLayout>
</layout>